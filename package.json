{
  "name": "bobarr",
  "version": "1.0.0-beta.1",
  "author": "iam4x <iam4x@me.com>",
  "license": "MIT",
  "scripts": {
    "postinstall": "(cd packages/web && yarn) && (cd packages/api && yarn)",
    "start": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up --build --force-recreate -d",
    "start:vpn": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml -f docker-compose.vpn.yml up --build  --force-recreate -d",
    "start:wireguard": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml -f docker-compose.wireguard.yml up --build  --force-recreate -d",
    "dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml -f docker-compose.vpn.yml up --force-recreate -d && docker-compose -f docker-compose.yml -f docker-compose.dev.yml logs --tail 20 -f api web",
    "lint": "yarn eslint --ext .ts,.tsx packages/api packages/web",
    "stop": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml down --remove-orphans"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "babel-eslint": "^10.1.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.7.0",
    "eslint-config-algolia": "^16.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "prettier": "^2.1.1",
    "typescript": "^4.0.2"
  }
}
